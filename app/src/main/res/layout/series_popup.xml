<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="Add New Series"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/moviecolor"
            android:layout_marginLeft="10dp"
            android:id="@+id/header_txt"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close"
            android:backgroundTint="@color/moviecolor"
            android:layout_toRightOf="@id/header_txt"
            android:id="@+id/btn_close"/>
    </RelativeLayout>

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Series Name"
        android:textColor="@color/moviecolor"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/series_name_edt"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="Series Name"
        android:textSize="15sp"
        android:background="@drawable/search_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Series Image Link"
        android:textColor="@color/moviecolor"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/series_img_edt"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="Series Image Link"
        android:textSize="15sp"
        android:background="@drawable/search_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Series Category"
        android:textColor="@color/moviecolor"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"/>
    <Spinner
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/series_cat_spinner"/>
    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Series Video Link"
        android:textColor="@color/moviecolor"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/series_video_link_edt"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="Series Video Link"
        android:textSize="15sp"
        android:background="@drawable/search_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"/>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/series_popup_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SAVE"
            android:background="@color/moviecolor"
            android:textColor="@color/whitecolor"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/series_popup_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CANCEL"
            android:background="@color/moviecolor"
            android:textColor="@color/whitecolor"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>